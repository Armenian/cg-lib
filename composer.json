{
    "name": "dmp/cg-lib",
    "description": "Toolset for generating PHP code",
    "keywords": ["code generation"],
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Johannes M. Schmitt",
            "email": "schmittjoh@gmail.com"
        },
        {
            "name": "David Akopyan",
            "email": "david_akopyan@yahoo.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "CG\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CG\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-cc": "phpunit coverage-html report/"
    }
}
